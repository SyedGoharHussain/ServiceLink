rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper functions
    function isAuthenticated() {
      return request.auth != null;
    }
    
    function isOwner(uid) {
      return isAuthenticated() && request.auth.uid == uid;
    }
    
    // USERS COLLECTION
    match /users/{userId} {
      // Allow read for authenticated users (to view worker profiles)
      // Also allow read by email for password reset
      allow read: if true;
      
      // Allow create for authenticated users or during signup
      allow create: if true;
      
      // Allow update by anyone (for password reset and FCM tokens)
      allow update: if true;
      
      // Allow delete by owner
      allow delete: if isOwner(userId);
      
      // NOTIFICATIONS SUBCOLLECTION
      match /notifications/{notificationId} {
        // Allow read if user is the owner of the notification
        allow read: if isAuthenticated() && request.auth.uid == userId;
        
        // Allow create for any authenticated user (to send notifications)
        allow create: if isAuthenticated();
        
        // Allow update by owner (to mark as read)
        allow update: if isAuthenticated() && request.auth.uid == userId;
        
        // Allow delete by owner
        allow delete: if isAuthenticated() && request.auth.uid == userId;
      }
    }
    
    // REQUESTS COLLECTION
    match /requests/{requestId} {
      // Allow read for authenticated users
      allow read: if isAuthenticated();
      
      // Allow create for authenticated users
      allow create: if isAuthenticated();
      
      // Allow update for authenticated users
      allow update: if isAuthenticated();
      
      // Allow delete for authenticated users
      allow delete: if isAuthenticated();
    }
    
    // CHATS COLLECTION - Allow all for authenticated users
    match /chats/{chatId} {
      allow read, write: if isAuthenticated();
      allow create: if isAuthenticated();
    }
    
    // MESSAGES SUBCOLLECTION (within chats) - Allow all for authenticated users
    match /chats/{chatId}/messages/{messageId} {
      allow read, write: if isAuthenticated();
    }
    
    // Allow all other authenticated access
    match /{document=**} {
      allow read, write: if isAuthenticated();
    }
  }
}
